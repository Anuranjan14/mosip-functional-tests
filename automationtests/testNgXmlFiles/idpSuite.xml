<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

	<suite name="IdP Suite">
	<!-- Passing Group as parmeter unsing "testType" Possible Groups are: smoke 
		regression smokeAndRegression -->
	<listeners>
		<listener class-name="io.mosip.report.CustomTestNGReporter" />
		<listener
			class-name="io.mosip.authentication.fw.util.AuthenticationTestsListener" />
		<listener class-name="io.mosip.authentication.e2e.E2EReport" />
		<listener class-name="io.mosip.customReport.EmailableReport" />
	</listeners>
		
 	<test name="ConfigurationEndpoint">
		<parameter name="ymlFile"
			value="idp/ConfigurationEndpoint/ConfigurationEndpoint.yml" />
		<classes>
			<class name="io.mosip.testscripts.GetWithParam" />
		</classes>
	</test>
	<test name="CreateOIDCClient">
		<parameter name="ymlFile"
			value="idp/CreateOIDCClient/CreateOIDCClient.yml" />
			<parameter name="idKeyName"	value="clientId" />
		<classes>
			<class name="io.mosip.testscripts.SimplePostForAutoGenId" />
		</classes>
	</test>
	<test name="UpdateOIDCClient">
		<parameter name="ymlFile"
			value="idp/UpdateOIDCClient/UpdateOIDCClient.yml" />
		<parameter name="pathParams" value="clientId" />
		<classes>
			<class name="io.mosip.testscripts.PutWithPathParamsAndBody" />
		</classes>
	</test>
	<test name="OAuthDetailsRequest">
		<parameter name="ymlFile"
			value="idp/OAuthDetailsRequest/OAuthDetailsRequest.yml" />
			<parameter name="idKeyName"	value="transactionId" />
		<classes>
			<class name="io.mosip.testscripts.SimplePostForAutoGenId" />
		</classes>
	</test>
	<test name="SendOtp">
		<parameter name="ymlFile"
			value="idp/SendOtp/SendOtp.yml" />
		<classes>
			<class name="io.mosip.testscripts.SimplePost" />
		</classes>
	</test>
	<test name="AuthenticateUser">
		<parameter name="ymlFile"
			value="idp/AuthenticateUser/AuthenticateUser.yml" />
		<classes>
			<class name="io.mosip.testscripts.SimplePostForAutoGenId" />
		</classes>
	</test>
	<test name="AuthorizationCode">
		<parameter name="ymlFile"
			value="idp/AuthorizationCode/AuthorizationCode.yml" />
			<parameter name="idKeyName"	value="code" />
		<classes>
			<class name="io.mosip.testscripts.SimplePostForAutoGenId" />
		</classes>
	</test>

	<test name="GenerateToken">
		<parameter name="ymlFile"
			value="idp/GenerateToken/GenerateToken.yml" />
			<parameter name="idKeyName"	value="access_token" />
		<classes>
			<class name="io.mosip.testscripts.SimplePostForAutoGenIdForUrlEncoded" />
		</classes>
	</test>
	<test name="GetOidcUserInfo">
		<parameter name="ymlFile"
			value="idp/GetOidcUserInfo/GetOidcUserInfo.yml" />
		<classes>
			<class name="io.mosip.testscripts.GetWithParam" />
		</classes>
	</test>
	<test name="IntrospectToken">
		<parameter name="ymlFile"
			value="idp/IntrospectToken/IntrospectToken.yml" />
		<classes>
			<class name="io.mosip.testscripts.GetWithQueryParam" />
		</classes>
	</test>
	<test name="GetJSONWebKeySet">
		<parameter name="ymlFile"
			value="idp/GetJSONWebKeySet/GetJSONWebKeySet.yml" />
		<classes>
			<class name="io.mosip.testscripts.GetWithParam" />
		</classes>
	</test>
	<test name="AuthorizationEndpoint">
		<parameter name="ymlFile"
			value="idp/AuthorizationEndpoint/AuthorizationEndpoint.yml" />
		<classes>
			<class name="io.mosip.testscripts.GetWithQueryParam" />
		</classes>
	</test>
</suite>
